rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // ============================================
    // HELPER FUNCTIONS
    // ============================================
    
    // Check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Check if user is admin
    function isAdmin() {
      return isAuthenticated() && 
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    // Check if user is the owner
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    // Check if user is owner OR admin
    function isOwnerOrAdmin(userId) {
      return isOwner(userId) || isAdmin();
    }

    // ============================================
    // USERS COLLECTION
    // ============================================
    match /users/{userId} {
      // READ: User can read own data, Admin can read all users
      allow read: if isOwnerOrAdmin(userId);
      
      // CREATE: 
      // - User can create their own document during registration
      // - Admin can create any user document (for User Management)
      allow create: if isOwner(userId) || isAdmin();
      
      // UPDATE:
      // - User can update own profile BUT cannot change their role
      // - Admin can update any user including role changes
      allow update: if isAuthenticated() && (
        // User updating themselves (cannot change role)
        (request.auth.uid == userId && 
         request.resource.data.role == resource.data.role)
        ||
        // Admin can update anyone (including role)
        isAdmin()
      );
      
      // DELETE: Only admin can delete users
      allow delete: if isAdmin();
    }

    // ============================================
    // FIELDS COLLECTION
    // ============================================
    match /fields/{fieldId} {
      // READ: Public - anyone can view available fields
      allow read: if true;
      
      // WRITE: Only admin can manage fields
      allow create, update, delete: if isAdmin();
    }

    // ============================================
    // BOOKINGS COLLECTION
    // ============================================
    match /bookings/{bookingId} {
      // READ: 
      // - Any authenticated user can READ bookings to check availability
      // - This is necessary for the booking screen to query existing bookings
      //   when checking slot availability across all users
      allow read: if isAuthenticated();
      
      // CREATE: 
      // - User can create booking for themselves only
      // - Validates that userId in document matches authenticated user
      allow create: if isAuthenticated() && 
                    request.resource.data.userId == request.auth.uid;
      
      // UPDATE:
      // - User can update own bookings (e.g., cancel)
      // - Admin can update any booking (approve, complete, cancel)
      allow update: if isAuthenticated() && (
        resource.data.userId == request.auth.uid || 
        isAdmin()
      );
      
      // DELETE:
      // - User can delete own bookings
      // - Admin can delete any booking
      allow delete: if isAuthenticated() && (
        resource.data.userId == request.auth.uid || 
        isAdmin()
      );
    }
  }
}
